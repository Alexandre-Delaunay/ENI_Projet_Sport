@model IEnumerable<ENI_Projet_Sport.ViewModels.RaceTypeViewModel>

@{
    ViewBag.Title = "Liste des types de course";
}

<h2>Liste des types de course</h2>

<p>
    @Html.ActionLink("Ajouter un type de course", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
        <th></th>
</tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-success" })
        </td>
        <td>
            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
