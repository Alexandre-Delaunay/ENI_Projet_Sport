@model IEnumerable<ENI_Projet_Sport.ViewModels.PersonViewModel>

@{
    ViewBag.Title = "Liste des personnnes";
}

<h2>Liste des personnnes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Détail", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-outline-secondary" })
        </td>
    </tr>
}

</table>
